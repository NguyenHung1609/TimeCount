<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E3A5F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/comfortaa_font"
        android:text="Đếm ngày"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fireIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fire"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_preferences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />
    <!-- Thẻ sự kiện -->

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="127dp"
        android:background="#88000000"
        android:orientation="vertical"
        android:padding="12dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="111dp">

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_font"
            android:text="Tên sự kiện"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/comfortaa_font"
            android:text="12 ngày"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/eventCard"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/card_background"
            android:clipToOutline="true">

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_sample" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>